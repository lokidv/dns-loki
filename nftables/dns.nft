table inet filter {
  set allow_dns_clients {
    type ipv4_addr
    flags interval
  }

  chain input {
    type filter hook input priority 0;
    # Accept SSH
    tcp dport 22 accept
    # DNS: allow known clients if enforcement later enabled (rules added by agent when toggled)
    udp dport 53 accept
    tcp dport 53 accept
    # default policy continue
  }
}
